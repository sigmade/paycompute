@model IEnumerable<EmployeeIndexViewModel>

@{ ViewBag.Title = "Employee";}

<div class="row"> 
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav class="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                </nav><br /><br />
                 <div class="row">
                     <div class="col-md-12 table-responsive-md">
                         <a class="btn btn-xs btn-outline-success floa-md-right" asp-action="Create"> New Employee</a>
                         <table class="table table-striped">
                             <thead>
                                 <tr>
                                     <th>Employee No</th>
                                     <th>Photo</th>
                                     <th>Name</th>
                                     <th>Gender</th>
                                     <th>Designation</th>
                                     <th>City</th>
                                     <th>Joined</th>
                                     <th class="text-warning">Action</th>
                                 </tr>
                             </thead>
                             <tbody>
                                 @foreach (var item in Model)
                                 {
                                 <tr>
                                     <td>
                                         <a asp-action="Detail">@item.EmployeeNo</a>
                                     </td>
                                     <td>
                                         <img src="@Url.Content(item.ImageUrl)"/>
                                     </td>
                                     <td>@item.FullName</td>
                                     <td>@item.Gender</td>
                                     <td>@item.Designation</td>
                                     <td>@item.City</td>
                                     <td>@item.DateJoined</td>
                                     <td>
                                         <a class="text-primary" asp-action="Edit" >
                                             <i class="fas fa-edit"></i>Edit
                                         </a>
                                         <a class="text-success" asp-action="Detail" >
                                             <i class="fas fa-bars"></i>Detail
                                         </a>
                                         <a class="text-primary" asp-action="Delete" >
                                             <i class="fas fa-trash-alt"></i>Delete
                                         </a>
                                     </td>
                                 </tr>
                                 }
                             </tbody>
                         </table>
                     </div>
                 </div>
            </div>
        </div>
    </div>
</div>
